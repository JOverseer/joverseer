            		<key><value>400</value></key>
		    		<ref bean="ProductionRevenueProcessor"/>
	    		</entry>
    		</map>
    	</property>	
   	</bean>
   	-->
   	
   	<bean id="mapTooltipHolder" class="org.joverseer.ui.map.MapTooltipHolder"/>
   	
   	<bean id="orderResultContainer" class="org.joverseer.tools.ordercheckerIntegration.OrderResultContainer"/>
   	
   	<bean class="org.joverseer.ui.ApplicationEventLogger"/>
   	
   	<bean id="mapEditorOptions" class="java.util.HashMap"/>
   	
   	<bean id="colorPicker" class="org.joverseer.ui.support.drawing.ColorPicker"/>

   	<bean id="orderEditorAutoNations" class="org.joverseer.ui.orderEditor.OrderEditorAutoNations"/>   	

	<bean id="characterInfoCollector" class="org.joverseer.tools.infoCollectors.characters.CharacterInfoCollector"/>   	

	<bean id="artifactInfoCollector" class="org.joverseer.tools.infoCollectors.artifacts.ArtifactInfoCollector"/>   	

	<bean id="combatCalculatorHolder" class="org.joverseer.ui.combatCalculator.CombatFormHolder"/>

   	<bean id="infoRegistry" class="org.joverseer.support.info.InfoRegistry">
   		<property name="infos">
   			<list>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>characterTitles</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/characterTitles.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>climateProduction</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/climateProduction.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>troopTypeDescriptions</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/troopTypeDescriptions.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>dragons</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/dragons2.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>characterWounds</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/characterWounds.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>armyWareTypes</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/armyWareTypes.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>armyTrainingDescriptions</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/armyTrainingDescriptions.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>armyLossesDescriptions</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/armyLossesDescriptions.csv</value>
