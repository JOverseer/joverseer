   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
   						<value>combat.troopTacticModifiers</value>
   					</property>
   					<property name="resourcePath">
   						<value>classpath:metadata/info/combatCalc/troopsTacticModifiers.csv</value>
   					</property>
   				</bean>
   				<bean class="org.joverseer.support.info.Info">
   					<property name="key">
